<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActOrderInputPayment">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Activity.ActOrderInputPayment">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:stretchColumns="1">

                <TableRow android:id="@+id/tr_customer_new">

                    <include
                        layout="@layout/orderinput_include1_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="2" />

                </TableRow>

                <TableRow android:id="@+id/tr_no">

                    <include
                        layout="@layout/orderinput_include1_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="2" />

                </TableRow>

                <TableRow android:id="@+id/tr_qty">

                    <include
                        layout="@layout/orderinput_include1_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="2" />

                </TableRow>


                <TableRow android:id="@+id/tr_item_head">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="2"
                        android:orientation="horizontal">

                        <include
                            layout="@layout/orderiteminput_payment_include1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="Print PDF" />
                </TableRow>

                <TableRow>

                    <ListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr_order_save"
                    android:paddingBottom="5dp"
                    android:visibility="visible">

                    <include
                        layout="@layout/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="2" />
                </TableRow>

            </TableLayout>


        </ScrollView>
    </HorizontalScrollView>

</RelativeLayout>