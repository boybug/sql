<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:stretchColumns="1">

            <TableRow android:id="@+id/tr_customer_new">

                <include
                    layout="@layout/orderinput_include1_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2" />

            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="0.03"
                    android:gravity="center|right"
                    android:paddingLeft="10dp"
                    android:text="เลขที่ : " />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1">

                    <TextView
                        android:id="@+id/orderiteminputpayment_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:gravity="center|left"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:paddingLeft="10dp"
                        android:text="น้ำหนักรวม : " />

                    <TextView
                        android:id="@+id/orderiteminputpayment_wgt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:enabled="false"
                        android:gravity="center|right"
                        android:paddingLeft="3dp"
                        android:text="0.0"
                        android:textSize="20sp" />

                </LinearLayout>
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="0.03"
                    android:gravity="center|right"
                    android:paddingLeft="10dp"
                    android:text="จำนวน : " />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1">

                    <TextView
                        android:id="@+id/orderiteminputpayment_qty"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:enabled="false"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:paddingLeft="10dp"
                        android:text="ยอดขายรวม : " />

                    <TextView
                        android:id="@+id/orderiteminputpayment_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:enabled="false"
                        android:gravity="center|right"
                        android:paddingLeft="3dp"
                        android:text="0.0"
                        android:textSize="20sp" />
                </LinearLayout>


            </TableRow>


            <TableRow android:id="@+id/tr_item_head"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:orientation="horizontal">

                    <include
                        layout="@layout/orderiteminput_payment_include1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="2"
                        />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:id="@+id/tr_order_save"
                android:paddingBottom="5dp"
                android:visibility="visible">

                <include
                    layout="@layout/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
