<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:gravity="center|right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="ล็อกอิน :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userinput_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center|left"
                android:textColor="@color/colorFish" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:gravity="center|right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="ชื่อผู้ใช้ :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userinput_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryYellow" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:gravity="center|right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="ระดับ :"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/userinput_deleteorder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:gravity="center|left"
                android:text="ลบบิล" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:gravity="center|right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="สถานะ :"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/userinput_admin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:gravity="center|left"
                android:text="แอดมิน" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/userinput_chngpwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_command_height"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/bt_command_height"
                android:layout_weight="1"
                android:background="@color/colorFish"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="เปลี่ยนรหัสผ่าน"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="22dp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/userinput_resetpwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_command_height"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@color/colorFish"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="รีเซทรหัสผ่าน"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="22dp" />
        </TableRow>
    </TableLayout>


</LinearLayout>