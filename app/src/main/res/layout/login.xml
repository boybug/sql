<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryNavy"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mainLayout"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimaryNavy"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:background="@color/colorPrimaryNavy"
                    android:src="@drawable/backgroud" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:weightSum="1">

            <EditText
                android:id="@+id/login_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_command_height"
                android:background="@color/colorWhite"
                android:ellipsize="end"
                android:ems="10"
                android:gravity="center|left"
                android:hint="อีเมล"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:scrollHorizontally="true"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_command_height"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:ellipsize="end"
                android:ems="10"
                android:gravity="center|left"
                android:hint="รหัสผ่าน [ไม่น้อยกว่า 6 หลัก]"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:scrollHorizontally="true"
                android:textSize="20sp" />


            <CheckBox
                android:id="@+id/login_remember"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bt_command_height"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:hint="บันทึกอีเมล/รหัสผ่าน ?"
                android:paddingLeft="5dp"
                android:scrollHorizontally="true"
                android:textSize="15sp" />

            <Switch
                android:id="@+id/login_local"
                android:layout_width="182dp"
                android:layout_height="41dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.32"

                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:scrollHorizontally="true"
                android:text="เชื่อมต่อในวงแลน" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/footerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/mainLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/login_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bt_command_height"
                        android:layout_marginLeft="2.5dp"
                        android:layout_weight="1"
                        android:background="@color/colorFish"
                        android:elevation="24dp"
                        android:gravity="bottom"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="เข้าสู่ระบบ"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="22sp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>

