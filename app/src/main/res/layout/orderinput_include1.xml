<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:stretchColumns="1">

            <TableRow android:id="@+id/tr_customer_new">

                <include
                    layout="@layout/orderinput_include1_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="0.03"
                    android:gravity="center|right"
                    android:paddingLeft="10dp"
                    android:text="เลขที่ : " />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1">

                    <TextView
                        android:id="@+id/orderinput_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorFish" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:paddingLeft="10dp"
                        android:text="น้ำหนักรวม : " />

                    <TextView
                        android:id="@+id/orderinput_wgt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:enabled="false"
                        android:gravity="center|right"
                        android:paddingLeft="3dp"
                        android:text="0.0"
                        android:textColor="@color/colorBeef"
                        android:textSize="20sp" />

                </LinearLayout>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="0.03"
                    android:gravity="center|right"
                    android:paddingLeft="10dp"
                    android:text="จำนวน : " />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1">

                    <TextView
                        android:id="@+id/orderinput_qty"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:enabled="false"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBeef"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:paddingLeft="10dp"
                        android:text="ยอดขายรวม : " />

                    <TextView
                        android:id="@+id/orderinput_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:enabled="false"
                        android:gravity="center|right"
                        android:paddingLeft="3dp"
                        android:text="0.0"
                        android:textColor="@color/colorBeef"
                        android:textSize="20sp" />
                </LinearLayout>


            </TableRow>


            <TableRow android:id="@+id/tr_item_head">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orderinput_listtitle"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="รายการสินค้า(0)"
                        android:textColor="@color/colorWhite"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!--<Button-->
                    <!--android:id="@+id/bt_add_item"-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:layout_gravity="center|right"-->
                    <!--android:background="@color/colorBeef"-->
                    <!--android:text="ขาย"-->
                    <!--android:textColor="@color/colorWhite" />-->

                </LinearLayout>

            </TableRow>

            <TableRow android:id="@+id/tr_item_detail">

                <ListView
                    android:id="@+id/list_order_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2" />

            </TableRow>

            <TableRow
                android:id="@+id/tr_order_save"
                android:paddingBottom="5dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/orderinput_save"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_command_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorFish"
                    android:gravity="bottom"
                    android:paddingBottom="10dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="บันทึก"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="22sp" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
