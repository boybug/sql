<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:stretchColumns="1">

            <TableRow android:id="@+id/tr_customer_new">

                <include
                    layout="@layout/orderinput_include1_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2" />

            </TableRow>

            <TableRow android:id="@+id/tr_no">

                <include
                    layout="@layout/orderinput_include1_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2" />

            </TableRow>

            <TableRow android:id="@+id/tr_qty">

                <include
                    layout="@layout/orderinput_include1_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2" />

            </TableRow>


            <TableRow android:id="@+id/tr_item_head">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orderinput_listtitle"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="รายการสินค้า(0)"
                        android:textColor="@color/colorWhite"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/bt_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center|right"
                        android:background="@color/colorAccent"
                        android:text="จ่ายเงิน"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </TableRow>

            <TableRow android:id="@+id/tr_item_detail">

                <ListView
                    android:id="@+id/list_order_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2" />

            </TableRow>

            <TableRow
                android:id="@+id/tr_order_save"
                android:paddingBottom="5dp"
                android:visibility="visible">

                <include
                    layout="@layout/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
