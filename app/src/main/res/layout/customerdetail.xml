<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bt_command_height">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:stretchColumns="1">


            <TableRow android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:gravity="center|right"
                    android:paddingRight="20dp"
                    android:text="ชื่อลูกค้า" />


                <TextView
                    android:id="@+id/customerdetail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </TableRow>

            <TableRow android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:gravity="center|right"
                    android:paddingRight="20dp"
                    android:text="ที่อยู่" />

                <TextView
                    android:id="@+id/customerdetail_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </TableRow>

            <TableRow android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:gravity="center|right"
                    android:paddingRight="20dp"
                    android:text="จัดส่ง" />

                <TextView
                    android:id="@+id/customerdetail_ship"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="center|left"
                    android:lines="1"
                    android:maxLines="2"
                    android:scrollHorizontally="true" />

            </TableRow>

            <TableRow android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:gravity="center|right"
                    android:paddingRight="20dp"
                    android:text="เบอร์โทร" />

                <TextView
                    android:id="@+id/customerdetail_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:ellipsize="end"

                    android:ems="10"
                    android:gravity="center|left"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLines="2"
                    android:scrollHorizontally="true"
                    android:textColor="@color/colorPrimaryYellow" />

            </TableRow>

            <TableRow
                android:id="@+id/tr_order_save"
                android:paddingBottom="5dp"
                android:visibility="visible">

            </TableRow>
        </TableLayout>

    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="94dp"
        android:layout_height="104dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorFish"
        app:elevation="0dp"
        app:rippleColor="@color/colorFish"
        app:srcCompat="@drawable/order" />

</android.support.design.widget.CoordinatorLayout>
