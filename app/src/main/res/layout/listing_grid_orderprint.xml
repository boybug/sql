<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="58mm"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TableRow
        android:layout_width="58mm"
        android:layout_height="60dp"
        android:visibility="visible">



        <TextView
            android:id="@+id/orderprint_no"
            style="@style/App_TextViewStyle"
            android:layout_width="5mm"
            android:layout_height="60dp"
            android:text="No."
            android:textSize="15dp" />

        <TextView
            android:id="@+id/orderprint_desc"
            style="@style/App_TextViewStyle"

            android:layout_width="33mm"
            android:layout_height="60dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="3"
            android:text="Name"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/orderprint_orderqty"
            style="@style/App_TextViewStyle"
            android:layout_width="10mm"
            android:layout_height="60dp"
            android:gravity="top|center"
            android:text="     "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/orderprint_isuuqty"
            style="@style/App_TextViewStyle"
            android:layout_width="10mm"
            android:layout_height="60dp"
            android:gravity="top|center"
            android:text="     "
            android:textSize="15dp" />


    </TableRow>
</LinearLayout>