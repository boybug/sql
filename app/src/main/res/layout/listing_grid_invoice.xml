<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="6dip">

    <TextView
        android:id="@+id/order_no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="order_no"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/invoice_no"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/invoice_amount" />

    <TextView
        android:id="@+id/invoice_amount"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/invoice_usr"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/invoice_ship"
        android:layout_marginRight="6dip"
        android:gravity="center_vertical"
        android:text="00.00"
        android:textColor="#ff0000" />

    <TextView
        android:id="@+id/invoice_ship"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@+id/invoice_cus"
        android:layout_alignEnd="@+id/invoice_amount"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/invoice_amount"
        android:gravity="center_vertical"
        android:text="00.00" />

    <TextView
        android:id="@+id/invoice_usr"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:text="invoice_usr"
        android:textSize="12sp"
        android:layout_below="@+id/invoice_cus"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/invoice_amount" />

    <TextView
        android:id="@+id/invoice_cus"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="invoice_cus"
        android:textSize="14sp"
        android:layout_below="@+id/order_no"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/invoice_amount" />

    <TextView
        android:id="@+id/invoice_no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="invoice_no"
        android:textColor="@color/colorFish"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/invoice_ship" />

</RelativeLayout>