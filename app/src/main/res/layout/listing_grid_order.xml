<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="6dip">

    <TextView
        android:id="@+id/order_amount"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/order_usr"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/order_qty"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:gravity="center_vertical"
        android:text="00.00"
        android:textColor="#ff0000" />

    <TextView
        android:id="@+id/order_qty"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@+id/order_cus"
        android:layout_alignEnd="@+id/order_amount"
        android:layout_alignParentTop="true"

        android:layout_toStartOf="@+id/order_amount"
        android:contentDescription="TODO"
        android:gravity="center_vertical"
        android:text="00.00" />

    <TextView
        android:id="@+id/order_usr"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/order_cus"
        android:layout_toStartOf="@+id/order_amount"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:text="Description"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/order_cus"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/order_no"
        android:layout_toStartOf="@+id/order_amount"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Description"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/order_no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toStartOf="@+id/order_qty"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="Example application"
        android:textColor="@color/colorFish"
        android:textSize="20sp" />

</RelativeLayout>