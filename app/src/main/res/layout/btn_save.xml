<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/list_order_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_span="2"
        android:layout_above="@+id/tableRow" />

    <TableRow android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow">

        <Button
            android:id="@+id/bt_cmd_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bt_command_height"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@color/colorFish"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="บันทึก"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

    </TableRow>




</RelativeLayout>