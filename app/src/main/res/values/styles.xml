<resources>

    <!-- ActBase application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorFish</item>
        <item name="colorPrimaryDark">@color/colorPrimaryNavy</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/App_TextViewStyle</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:buttonStyle">@style/App_ButtonStyle</item>
        <item name="android:spinnerStyle">@style/App_SpinnerStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="App_TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="App_TextViewStylePick" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="App_ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="App_SpinnerStyle" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Dialog">
        <item name="android:textColorPrimary">@color/colorFish</item>
        <item name="android:textColor">@color/colorFish</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
